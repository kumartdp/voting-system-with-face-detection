<Container>:

	name: user
	add: address
	
	GridLayout:
		cols:1
		size:root.width-150,root.height-150
		pos:100,100
		
		GridLayout:
			cols:2
			
			Label:
			    size_hint: (.2, None)
                height: 30
				text:"NAME"
			
			TextInput:
				size_hint: (.2, None)
                height: 30
				id:user
				multiline:False
			Label:
			    size_hint: (.2, None)
                height: 30
				text:"ADDRESS"
			TextInput:
			    size_hint: (.2, None)
                height: 70
				id:address
				multiline:True
		Button:
			text:"submit"
			size_hint: (.2, None)
            height: 30
			on_press:root.btn()
